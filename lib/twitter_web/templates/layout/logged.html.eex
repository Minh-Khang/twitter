<%= if logged_in?(@conn) do %>
  <span>
    <%= link "Sign out", to: Routes.session_path(@conn, :delete), method: :delete %>
  </span>

<% else %>
  <span><%= link "Create an account", to: Routes.registration_path(@conn, :new) %></span>
  <span><%= link "Sign in", to: Routes.session_path(@conn, :new) %></span>
<% end %>
